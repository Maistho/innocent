{{!< default}}

<header id="main-header"{{#if @blog.cover}} class="has-cover"{{/if}}>
	{{navigation}}
	<a class="site-title" href="{{@blog.url}}">
		{{#if @blog.logo}}
			<span class="site-logo"><img src="{{@blog.logo}}" alt="Logo" /></span>
		{{/if}}
			<h1 class="site-name">{{@blog.title}}</h1>
		{{#if @blog.description}}
			<span class="site-description">{{@blog.description}}</span>
		{{/if}}
	</a>
	{{#if @blog.cover}}
		<div class="site-cover" style="background-image: url({{@blog.cover}})"></div>
	{{/if}}
</header>

<div id="post-index" class="container">

	<main class="content" role="main">

		{{> "loop"}}

	</main>

</div>
